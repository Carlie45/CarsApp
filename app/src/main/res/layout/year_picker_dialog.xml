<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Year of Manufacture"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorDarkBlue" />

    <NumberPicker
        android:id="@+id/numberPickerYear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDialogTitle"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonYearPickerCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerYear"
        android:layout_alignParentLeft="true"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonYearPickerSelect"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerYear"
        android:layout_alignParentRight="true"
        android:text="Select" />

</RelativeLayout>
