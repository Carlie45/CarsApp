<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <NumberPicker
        android:id="@+id/numberPickerYear"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerYear"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonYearPickerCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:text="@string/cancel_button_name" />

        <Button
            android:id="@+id/buttonYearPickerSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:text="@string/select_button_name" />

    </LinearLayout>



</RelativeLayout>
