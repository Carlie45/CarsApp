<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Year of Manufacture"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorDarkBlue" />

    <TextView
        android:id="@+id/textViewDialogDisplayYearOfManufacture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDialogTitle"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorBlack"/>

    <Button
        android:id="@+id/buttonShowYearDialogClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDialogDisplayYearOfManufacture"
        android:text="Close" />

</RelativeLayout>
